<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="user">
	<insert id="insert" parameterType="uservo">
		<![CDATA[insert into user values(null, #{name}, #{email}, #{password}, #{gender}, now())]]> <!-- 태그가 아님을 알려줌 (데이터) -->
	</insert>
	
	<select id="getByEmailAndPassword" parameterType="map" resultType="uservo"> <!-- map, string, integer 내장 -->
		<![CDATA[select no, name from user where email = #{email} and password = #{password}]]>
	</select>
</mapper>
